let

  io = #"io.cru",
  arith = #"arith.cru",
  logic = #"logic.cru",

  print = io.print,
  add = arith.add,
  sub = arith.sub,
  mul = arith.mul,
  div = arith.div,
  eq = arith.eq,
  if = logic.if,

  fact n =
    if (eq n 0) 1 $
    mul n (fact (sub n 1)),

  exp x precision =
    if (lt precision 0) 0 $
    let f n acc term =
      if (eq n precision) acc $
      f (add n 1) (add acc (div term (fact n))) (mul term x) in
    f 0 0 1

in

print (exp 2 40)